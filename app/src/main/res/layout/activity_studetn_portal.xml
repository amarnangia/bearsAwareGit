<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/blue_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- Customize the button as per your requirement -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_outline"
                android:text="ANNOUNCEMENT: SCHOOL OUT UNTIL august 28th "
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:text="Welcome Back!"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="118dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="5dp"
            android:paddingRight="17dp"
            android:src="@drawable/logo" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="180dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="10dp"
            android:rowCount="3">

            <LinearLayout
                android:id="@+id/openCalendar"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:background="@drawable/button_outline"
                android:clickable="true"
                android:gravity="center"
                android:onClick="openCalandar"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calendar"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/openImages"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:background="@drawable/button_outline"
                android:clickable="true"
                android:gravity="center"
                android:onClick="openImages"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_photo_gallery" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo Gallery"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mapButton"
                android:layout_width="180dp"
                android:layout_height="175dp"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:background="@drawable/button_outline"
                android:clickable="true"
                android:gravity="center"
                android:onClick="openMap"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_map" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School Map"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactButton"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:background="@drawable/button_outline"
                android:clickable="true"
                android:gravity="center"
                android:onClick="Contacts"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_contact_teachers" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Teachers"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareButton"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_outline"
                android:clickable="true"
                android:gravity="center"
                android:onClick="SharePhoto"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_photo_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request to Share"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/openProfile"
                android:layout_width="175dp"
                android:layout_height="160dp"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_outline"
                android:clickable="true"
                android:gravity="center"
                android:onClick="openProfile"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </LinearLayout>
        </GridLayout>

    </RelativeLayout>

</ScrollView>